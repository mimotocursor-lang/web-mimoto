      padding-bottom: 0;
    }

    .google-review-button {
      padding: 8px 16px;
      font-size: 11px;
    }
  }
</style>

<script>
  // Inicializar cada instancia del carrusel por separado
  function initCarousel(container: HTMLElement) {
    const cards = container.querySelectorAll('.google-review-card');
    const indicators = container.querySelectorAll('.google-review-indicator');
    
    if (cards.length === 0) {
      console.warn('⚠️ No se encontraron cards en este contenedor');
      return;
    }
    
    let currentIndex = 0;
    let intervalId: ReturnType<typeof setInterval> | null = null;
    
    console.log(`✅ Inicializando carrusel con ${cards.length} reviews`);
    
      function show(index: number) {
        // Asegurar que el índice esté en rango válido
        let idx = index;
        if (idx < 0) idx = 0;
        if (idx >= cards.length) idx = cards.length - 1;
        idx = idx % cards.length;
        
        // Ocultar TODAS las cards primero
        cards.forEach((card) => {
          card.classList.remove('active');
        });
        
        // Mostrar solo la card activa
        const activeCard = cards[idx] as HTMLElement;
        if (activeCard) {
          activeCard.classList.add('active');
        }
        
        // Actualizar indicadores
        indicators.forEach((ind, i) => {
          if (i === idx) {
            ind.classList.add('active');
          } else {
            ind.classList.remove('active');
          }
        });
        
        currentIndex = idx;
      }
    
    // Mostrar la primera card inmediatamente y empezar el slider
    show(0);
    
    // Intervalo cada 5 segundos - loop infinito (empieza inmediatamente)
    intervalId = setInterval(() => {
      currentIndex = (currentIndex + 1) % cards.length;
      show(currentIndex);
    }, 5000);
    
    // Click en indicadores
    indicators.forEach((ind, idx) => {
      ind.addEventListener('click', () => {
        if (intervalId) clearInterval(intervalId);
        show(idx);
        intervalId = setInterval(() => {
          currentIndex = (currentIndex + 1) % cards.length;
          show(currentIndex);
        }, 5000);
      });
    });
  }
  
  // Inicializar todos los carruseles cuando el DOM esté listo
  function initAllCarousels() {
    const containers = document.querySelectorAll('.google-reviews-carousel-container');
    containers.forEach((container) => {
      initCarousel(container as HTMLElement);
    });
  }
  
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initAllCarousels);
  } else {
    initAllCarousels();
  }
  
  // Respaldo
  setTimeout(initAllCarousels, 100);
</script>

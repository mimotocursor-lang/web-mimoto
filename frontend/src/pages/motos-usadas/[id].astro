---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { supabaseClient } from '../../lib/supabase/client';
import { getWhatsAppUrl } from '../../lib/whatsapp';

export async function getStaticPaths() {
  // Obtener todas las motos activas para generar las rutas est√°ticas
  const { data: motos = [], error } = await supabaseClient
    .from('used_motorcycles')
    .select('id')
    .eq('status', 'active');

  if (error || !motos || motos.length === 0) {
    return [];
  }

  return motos.map((moto) => ({
    params: { id: moto.id.toString() },
  }));
}

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/motos-usadas');
}

// Cargar moto por ID
const { data: moto, error } = await supabaseClient
  .from('used_motorcycles')
  .select('*')
  .eq('id', id)
  .eq('status', 'active')
  .single();

if (error || !moto) {
  return Astro.redirect('/motos-usadas');
}

// Procesar im√°genes
const mainImage = moto.main_image_url || '';
const allImages = moto.images_urls || [];
const images = [mainImage, ...allImages].filter(img => img && img.trim() !== '');

// Si no hay im√°genes, usar placeholder
if (images.length === 0) {
  images.push('https://images.unsplash.com/photo-1609630875171-b1321377ee65?w=1200&q=80');
}

import { getWhatsAppUrl } from '../../lib/whatsapp';
const WHATSAPP_MOTOS_URL = getWhatsAppUrl('motos');

// Datos formateados
const year = moto.year || 'N/A';
const mileage = moto.mileage ? `${moto.mileage.toLocaleString('es-CL')} km` : 'N/A';
const price = Number(moto.price) || 0;
const brand = moto.brand || '';
const model = moto.model || '';
const title = moto.title || `${brand} ${model}`;

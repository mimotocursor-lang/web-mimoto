{
  "name": "mimoto-motos-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Web app para negocio de motos (servicio técnico, reparación, accesorios y repuestos) con Astro en el frontend y NestJS en el backend.",
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "dotenv": "^17.2.3"
  }
}
